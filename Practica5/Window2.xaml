<Window x:Class="Practica5.Window2"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Practica5"
        mc:Ignorable="d"
        Title="Window2" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="200"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBox x:Name="LoginTbx" Grid.Row="1" VerticalAlignment="Center" Height="40" Text="Логин"/>
            <PasswordBox x:Name="PasswordTbx" Grid.Row="2" VerticalAlignment="Center" Height="40" />
        <Button Content="Авторизоваться" Grid.Row="3" VerticalAlignment="Bottom" Height="50" Click="AutorisationClick2"/>
    </Grid>
</Window>
